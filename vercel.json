{
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }

  ],
  "rewrites": [
    { "source": "/posts", "destination": "https://posts-application-backend.vercel.app/posts" },
    { "source": "/posts/(.*)", "destination": "https://posts-application-backend.vercel.app/posts/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
